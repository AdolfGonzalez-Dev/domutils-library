{
  "name": "domutils-library",
  "version": "0.2.0",
  "description": "Lightweight DOM utility library with reactive signals and modern gestures",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./reactive": {
      "import": "./dist/reactive.esm.js",
      "require": "./dist/reactive.cjs",
      "types": "./dist/reactive.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "dev": "vitest --watch",
    "build": "node build.js",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "dom",
    "utility",
    "reactive",
    "signals",
    "gestures",
    "drag",
    "modal",
    "tabs",
    "tooltip"
  ],
  "author": "AdolfDigitalDeveloper",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdolfDigitalDeveloper/DomUtilsLibrary"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.3",
    "@vitest/ui": "^0.34.6",
    "esbuild": "^0.19.5",
    "jsdom": "^22.1.0",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
